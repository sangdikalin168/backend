{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["express"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/generated/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
